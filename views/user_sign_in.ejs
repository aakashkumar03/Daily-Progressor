<link rel="stylesheet" href="/css/user_form.css" />

<section class="container forms">
  <div class="form login">
    <div class="form-content">
      <header>Login</header>
      <form action="/users/create-session" method="POST" name="Login_Form">
            <div class="field input-field">
          <input
            type="email"
            class="input"
            name="email"
            placeholder="Email Address"
            required
            autofocus=""
          />
        </div>

        <div class="field input-field">
          <input
            type="password"
            placeholder="Password"
            class="password"
            name="password"
            required
          />
          <i class="fa-regular fa-eye-slash eye-icon"></i>
        </div>

        <div class="field button-field">
          <input
            type="submit"
            value="Sign In"
            class="btn btn-lg btn-primary btn-block"
          />
        </div>
      </form>

      <div class="form-link">
        <span
          >Don't have an account?
          <a href="/users/sign-up" class="link signup-link">Signup</a></span
        >
      </div>
    </div>


  
  </div>
</section>

